<center><h1>Dish INFO</h1></center>
<div class="container">
  <%= form_for @dish, :url => dish_path(@dish), method: :put, html: {id: "edit_dish_validate", class: "",autocomplete: 'off'} do |f|%>
    <% if @dish.image.present? %>
      <div class="upload-preview">
        <%= image_tag(@dish.image.try(:url),:width => 200, :height => 100) %>
      </div>
    <%else%>
        <div class="upload-preview">
          <img src="/assets/1.png" style="height:200px;width:200px;" id= "black_cat_img" alt="">
        </div>
    <%end%>
    <%= f.file_field :image, class: "file" %>
      <%= f.hidden_field :course_id, :value => params[:id] %>
      <label>Name</label>
      <%= f.text_field :name, placeholder: "Dish name.."%>

      <label>Description</label>
      <%= f.text_area :description, placeholder: "Description.."%>

      <label>Price</label>
      <%= f.text_field :price, placeholder: "0.0"%>

      <input type="submit" value="Submit">
      <%= link_to 'Delete', dish_path(@dish),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  <%end%>
</div>

