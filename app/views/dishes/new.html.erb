<center><h1>Dish</h1></center>
<div class="container">
  <%= form_for :dish, url: dishes_path, html: {id: "", class: "",autocomplete: 'off'} do |f|%>
      <div class="upload-preview">
        <img src="/assets/1.png" style="height:200px;width:200px;" id= "black_cat_img" alt="">
      </div>
	<%= f.file_field :image, :accept=>"Image/*", class: "file" %>
    <%= f.hidden_field :course_id, :value => params[:id] %>
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Dish name.."%>

    <label>Description</label>
    <%= f.text_area :description, placeholder: "Description.."%>

    <label>Price</label>
    <%= f.text_field :price, placeholder: "0.0"%>

    <input type="submit" value="Submit">
  <%end%>
</div>
